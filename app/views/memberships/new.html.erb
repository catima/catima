<% provide(:title, t('.invite_members_to_group', group: @group.name)) %>


<div class='panel-body'>
  <%= bootstrap_form_for([@group, @membership]) do |f| %>

    <%= f.form_group do %>
      <label class="control-label required" for="members_to_invite">Emails of members to invite</label>
      <p>For multiple members to invite at once, write one email address per line.</p>
      <%= text_area('members_to_invite', '', style: 'width: 300px;', rows: 5) %>
    <% end %>

    <hr/>

    <%= f.primary(t('.invite_members')) %>
    <%= link_to(
          t('cancel'),
          group_path(id: @group.id),
          class: 'btn btn-link') %>
  <% end %>
</div>
