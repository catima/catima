<%= bootstrap_form_tag(
      :url => {:controller => controller, :action => action, :uuid => ''},
      :method => "POST",
      :layout => :inline,
      :html => {:class => "justify-content-center my-4"}) do |f| %>

  <div class="mx-0 px-0">
    <%= f.search_field(
          :q,
          :value => @saved_search&.query,
          :label => t('simple_searches.form.submit'),
          :placeholder => @item_type.present? ? t('.placeholder', :item_type => @item_type.name_plural) : t('.submit'),
          :hide_label => true,
          :autofocus => true,
          :style => "width: 25em",
          append: (link_to(fa_icon("times"), request.path.remove('search', ''), class: "btn btn-outline-secondary") if params[:q].present?)
        ) %>
  </div>

  <%= f.submit(t(".submit"), class: 'btn btn-outline-secondary mx-0') %>

  <% if display_advanced_search %>
    <%= link_to(
          t(".advanced"),
          new_advanced_search_path,
          :class => "btn btn-link") %>
  <% end %>
<% end %>
