<% if policy(model).edit? %>
  <%= link_to(
          fa_icon(:pencil),
          edit_catalog_admin_container_path(model.catalog, I18n.locale, model),
          class: "btn btn-xs btn-default container-action-edit",
          "data-toggle" => "tooltip", "data-placement" => "top", "title" => t("edit")
      ) %>
<% end %>
<% if policy(model).destroy? %>
  <%= link_to(
          fa_icon(:trash),
          catalog_admin_container_path(model.catalog, I18n.locale, model),
          :method => :delete,
          :data => {
              :confirm => "Are you sure you want to delete the container?"
          },
          class: "btn btn-xs btn-default container-action-delete",
          "data-toggle" => "tooltip", "data-placement" => "top", "title" => t("delete")
      ) %>
<% end %>
