<% if policy(model).edit? %>
  <%= link_to(
          fa_icon(:pencil),
          edit_catalog_admin_page_path(model.catalog, I18n.locale, model),
          class: "btn btn-xs btn-outline-secondary page-action-edit",
          "data-toggle" => "tooltip", "data-placement" => "top", "title" => t("edit")
      ) %>
<% end %>
<% if policy(model).destroy? %>
  <%= link_to(
          fa_icon(:trash),
          catalog_admin_page_path(model.catalog, I18n.locale, model),
          :method => :delete,
          :data => {
              :confirm => t("delete_confirm", model: model.slug)
          },
          class: "btn btn-xs btn-outline-secondary page-action-delete",
          "data-toggle" => "tooltip", "data-placement" => "top", "title" => t("delete")
      ) %>
<% end %>
