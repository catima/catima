<% if current_user.system_admin? %>
  <%= link_to(
        fa_icon(:history),
        admin_catalog_entry_logs_path(model, model.valid_locale),
        class: "btn btn-xs btn-outline-secondary catalog-action-logs",
        "data-toggle" => "tooltip", "data-placement" => "top", "title" => EntryLog.model_name.human(count: 2)
      ) %>
  <%= link_to(
        fa_icon(:pencil),
        edit_admin_catalog_path(model, model.valid_locale),
        class: "btn btn-xs btn-outline-secondary catalog-action-edit",
        "data-toggle" => "tooltip", "data-placement" => "top", "title" => "Edit"
      ) %>
  <%= deactivation_toggle(
        model,
        :admin_catalog_path,
        model,
          model.valid_locale
      )%>
  <%= link_to(
          fa_icon(:trash),
          admin_catalog_path(model.slug),
          :method => :delete,
          :data => {
              :confirm => "Are you sure you want to delete the “#{model.name}” catalog?"
          },
          class: "btn btn-xs btn-outline-secondary catalog-action-delete #{'disabled' if model.not_deactivated?}",
          "data-toggle" => "tooltip", "data-placement" => "top", "title" => "Delete"
      ) %>
<% end %>
