<% if current_user.authenticated? %>
  <li class="dropdown" id="user-menu">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
      <%= fa_icon(:user) %>
      <%= current_user.email %>
      <b class="caret"></b>
    </a>

    <ul class="dropdown-menu">
      <li>
        <%= link_to(
              t(".my_profile"),
              edit_user_registration_path(:locale => I18n.locale)) %>
      </li>
      <li>
        <%= link_to(
              t('.my_groups'),
              memberships_path(locale: I18n.locale)) %>
      </li>
      <li>
        <%= link_to(
                t(".my_favorites"),
                favorites_path(:locale => I18n.locale)) %>
      </li>
      <li>
        <%= link_to(
              t(".log_out"),
              destroy_user_session_path(:locale => I18n.locale),
              :method => "delete") %>
      </li>
    </ul>
  </li>
<% else %>
  <li>
    <%= link_to(
          t(".log_in"),
          new_user_session_path(:locale => I18n.locale)) %>
  </li>
  <li>
    <%= link_to(
          t(".register"),
          new_user_registration_path(:locale => I18n.locale)) %>
  </li>
<% end %>
