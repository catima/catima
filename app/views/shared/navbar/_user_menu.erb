<% if current_user.authenticated? %>
  <li class="dropdown nav-item" id="user-menu">
    <a href="#" class="dropdown-toggle  nav-link" data-bs-toggle="dropdown">
      <%= fa_icon(:user) %>
      <%= current_user.email %>
    </a>

    <ul class="dropdown-menu dropdown-menu-end">
        <%= link_to(
              t(".my_profile"),
              edit_user_registration_path(:locale => I18n.locale), class: "dropdown-item") %>
        <%= link_to(
              t('.my_groups'),
              memberships_path(locale: I18n.locale), class: "dropdown-item") %>
        <%= link_to(
              t(".my_favorites"),
              favorites_path(:locale => I18n.locale), class: "dropdown-item") %>
        <%= link_to(
              t(".my_searches"),
              searches_path(:locale => I18n.locale), class: "dropdown-item") %>
        <%= link_to(
              t(".log_out"),
              destroy_user_session_path(:locale => I18n.locale),
              :method => "delete", class: "dropdown-item") %>
    </ul>
  </li>
<% else %>
  <li class="nav-item">
    <%= link_to(
          t(".log_in"),
          new_user_session_path(:locale => I18n.locale), class: "nav-link") %>
  </li>
  <li class="nav-item">
    <%= link_to(
          t(".register"),
          new_user_registration_path(:locale => I18n.locale), class: "nav-link") %>
  </li>
<% end %>
