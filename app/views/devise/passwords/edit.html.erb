<% provide(:title, t(".title")) %>

<%= bootstrap_form_for(
      resource,
      :as => resource_name,
      :url => change_password_path(resource_name),
      :html => { :method => :patch }) do |f| %>

  <%= render :partial => "devise/shared/error_messages" %>
  <%= f.hidden_field(:reset_password_token) %>
  <%= f.hidden_field(:email, :autocomplete => "username") %>

  <%= f.password_field(
        :password,
        :label => t(".new_password"),
        :autofocus => true,
        :autocomplete => "new-password",
        :help => t("common.minimum_characters", :length => @minimum_password_length)) %>

  <%= f.password_field(
        :password_confirmation,
        :label => t(".new_password_confirmation"),
        :autocomplete => "new-password") %>

  <%= f.primary(t(".submit")) %>
<% end %>

<hr>

<%= render "devise/shared/links" %>
