<%= react_component('Timeline/components/Timeline', {
  sort: params[:sort] || container.sort || 'ASC',
  url: [page_path(@page), "/#{container.id}/items/?style=timeline", params[:sort] ? "&sort=#{params[:sort]}" : ""].join,
  currentPage: params[:page] || 1,
  icons: {up: fa_icon("chevron-up"),
          down: fa_icon("chevron-down")},
  links: {
    asc: page_url(style: "timeline", sort: "ASC"),
    desc: page_url(style: "timeline", sort: "DESC")
  },
  pageCount: (item_list.total_count / 24) + 1
}) %>
