<%= f.text_field(:path, :autofocus => true) %>

<%= f.select(:locale, options_for_select(["en", "de", "fr", "it"], @template_storage.locale)) %>

<%= f.select(:handler, options_for_select(["erb"], @template_storage.handler)) %>
<%= f.select(:format, options_for_select(["html"], @template_storage.format)) %>

<%= f.form_group(
      :partial,
      :help => "A partial template is loaded from another template."
    ) do %>
  <%= f.check_box(:partial) %>
<% end %>


<%= f.text_area(:body, :rows => 15) %>
