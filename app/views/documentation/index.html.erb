<% provide(:title, "Documentation") %>

<div id="doc-content">
  <%= markdown_2_html("#{ENV['DOC_BASE_URL']}1-introduction.md").html_safe %>

  <br>

  <div class="panel-group" id="doc-accordion">
    <%= render("documentation/accordion_item",
               title: "Search",
               content_url: "#{ENV['DOC_BASE_URL']}2-basics.md",
               id: random_id)

    %>

    <% if current_user.catalog_role_at_least?(@catalog, 'user') %>
      <%= render("documentation/accordion_item",
                 title: "Favorites & groups",
                 content_url: "#{ENV['DOC_BASE_URL']}2-basics.md",
                 id: random_id)
      %>
    <% end %>

    <% if current_user.catalog_role_at_least?(@catalog, 'editor') %>
      <%= render("documentation/accordion_item",
                 title: "Catalog staff",
                 content_url: "#{ENV['DOC_BASE_URL']}3-data.md",
                 id: random_id)
      %>
    <% end %>

    <% if current_user.catalog_role_at_least?(@catalog, 'admin') %>
      <%= render("documentation/accordion_item",
                 title: "Catalog admin",
                 content_url: "#{ENV['DOC_BASE_URL']}4-setup.md",
                 id: random_id)
      %>
    <% end %>
  </div>
</div>
