<div class="mt-3" data-controller="item-list-inputs" data-item-list-inputs-urls="<%= {sortFieldSelectOptionsUrl: sort_field_select_options_catalog_admin_pages_path}.to_json %>">
  <% if catalog.item_types.any? %>
    <%= item_type_select(f, {}, {"data-action": "input->item-list-inputs#updateSortFieldSelect", "data-item-list-inputs-target": "itemTypeSelect"}) %>
    <%= sort_select(f, {}, {"data-item-list-inputs-target": "sortSelect"}) %>
    <%= style_select(f, {:help => t('.display_style')}, {"data-action": "input->item-list-inputs#toggleDisplaySortFieldSelect", "data-item-list-inputs-target": "styleSelect"}) %>
    <div data-item-list-inputs-target="sortFieldSelectWrapper" class="<%= (display_sort_field?(f) ? '' : 'd-none') %>">
      <%= sort_field_select(f, {"data-item-list-inputs-target": "sortFieldSelect"}) %>
    </div>
  <% else %>
    <div class="alert alert-warning">
      <%= t('catalog_admin.containers.item_type_warning') %>
    </div>
  <% end %>
</div>
