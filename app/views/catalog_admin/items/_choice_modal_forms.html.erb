<% item.fields.where(type: 'Field::ChoiceSet').each_with_index do |field, i| %>
  <%= render("catalog_admin/choice_sets/choice_modal", :field => field, uuid: field.uuid, choice: field.choice_set.choices.new) %>
  <% field.choices.each do |choice| %>
    <% if (category = choice.category) && category.not_deleted? %>
      <% category.fields.each do |cat_field| %>
        <% if cat_field.is_a?(Field::ChoiceSet) %>
          <%= render("catalog_admin/choice_sets/choice_modal", :field => cat_field, uuid: field.uuid, choice: field.choice_set.choices.new) %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
