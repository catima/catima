<% provide(:title, t('.edit')) %>

<%= bootstrap_form_for(@item_type,
                       :url => catalog_admin_item_type_path) do |f| %>
  <%= render("common_form_fields", :f => f) %>
  <hr>
  <%= link_to(
        fa_icon(:trash, :text => t('.delete')),
        { :action => "destroy" },
        :method => "delete",
        :class => "pull-right btn btn-link",
        :data => {
          :confirm => t('.delete_confirmation', item_type: @item_type.name)
        }) %>

  <%= f.primary(t('.save')) %>
  <%= link_to(
        t("cancel"),
        catalog_admin_item_type_fields_path(catalog, I18n.locale, @item_type),
        :class => "btn btn-link") %>
<% end %>
