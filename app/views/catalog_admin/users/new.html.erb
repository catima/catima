<% provide(:title, t('new_user')) %>

<%= bootstrap_form_for(
      @user,
      :url => catalog_admin_users_path(catalog, I18n.locale)
      ) do |f| %>

  <%= f.email_field(:email, :autofocus => true, :autocomplete => "off") %>
  <%= render("common_form_fields", :f => f) %>

  <%= f.primary(t('send_invitation')) %>
  <%= link_to t('cancel'), catalog_admin_users_path, :class => "btn btn-link" %>
<% end %>
