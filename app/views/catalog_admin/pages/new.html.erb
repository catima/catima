<% provide(:title, t('new_page')) %>

<div class="card-body">
  <%= bootstrap_form_for([:catalog_admin, @page]) do |f| %>

    <%= render("common_form_fields", :f => f) %>

    <%= f.primary(t('.create_page')) %>
    <%= submit_and_add_another(f) %>
    <%= link_to(
          t("cancel"),
          catalog_admin_pages_path,
          :class => "btn btn-link") %>

  <% end %>
</div>
