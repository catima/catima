<% content_for :meta_tags do %>
  <%= meta_tag_description_for_catalogs(@catalog) %>
<% end %>

<% provide(:extra_nav) do %>
  <%= render("simple_searches/form",
      :controller => "simple_searches",
      :action => "show",
      :display_advanced_search => true) %>
<% end %>

<% if @catalog.custom_root_page.nil? %>
  <% provide(:title, @catalog.name) %>
  <p>
    <% if @catalog.description.present? %>
      <%= @catalog.description %>
    <% else %>
      <%= t(".welcome", :catalog => @catalog.name) %>
    <% end %>
  </p>

<% else %>
  <% @page = @catalog.custom_root_page %>
  <%= render partial:'pages/content' %>
<% end %>
