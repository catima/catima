<div class="search-container">
  <div class="col-md-12">
    <%= react_component('ReferenceSearchContainer',
      props: {
        catalog: field.catalog.slug,
        parentItemType: field.field_set.slug,
        itemType: field.related_item_type.slug,
        field: field.slug,
        locale: I18n.locale,
        multiple: false,
        # multiple: field.multiple?, #Uncomment this if you need multiple tags in a reference input
        searchPlaceholder: t('advanced_searches.fields.reference_search_field.item_type_placeholder'),
        filterPlaceholder: t('advanced_searches.fields.reference_search_field.field_placeholder'),
        noOptionsMessage: t("catalog_admin.items.reference_editor.no_options"),
        inputName: "advanced_search[criteria][#{field.uuid}][0][exact]",
        referenceFilterName: "advanced_search[criteria][#{field.uuid}][0][filter_field_uuid]",
        srcRef: "advanced_search_criteria_#{field.uuid}_0_exact",
        itemTypeSearch: false,
        selectConditionName: "advanced_search[criteria][#{field.uuid}][0][condition]",
        selectCondition: field.search_conditions_as_hash,
        fieldConditionName: "advanced_search[criteria][#{field.uuid}][0][field_condition]",
        fieldConditionData: field.search_field_conditions_as_hash
      },
      prerender: false) %>
  </div>
</div>
