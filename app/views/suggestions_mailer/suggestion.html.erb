<div>
  <%= raw t('suggestions_mailer.intro',
            suggestion_link: link_to(t("item_link"), Rails.application.routes.url_helpers.edit_catalog_admin_item_url(
              :catalog_slug => @suggestion.catalog,
              :item_type_slug => @suggestion.item_type,
              :locale => I18n.locale,
              :id => @suggestion.item
            )))
  %>
</div>

<br>
<div>
  <%= t("suggestions_mailer.catalog", catalog: @suggestion.catalog.name).html_safe %>
</div>

<div>
  <%= t("suggestions_mailer.item_type", item_type: @suggestion.item_type.name).html_safe %>
</div>

<div>
  <%= t("suggestions_mailer.item", item: item_display_name(@suggestion.item)).html_safe %>
</div>

<% if @suggestion.user %>
  <div>
    <%= t("suggestions_mailer.user", user: @suggestion.user&.email).html_safe %>
  </div>
<% end %>

<br>
<div>
  <%= t("suggestions_mailer.body_html", content: html_escape(@suggestion.content).gsub(/\n/, '<br/>').html_safe) %>
</div>
